<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%=@shoe.name()%></span>
        <p><%=@shoe.brand()%>
           <%=@shoe.style()%>
           <%=@shoe.cost()%></p>
      </div>
    </div>
  </div>
</div>
  <div class="divider"></div><br>
  <p><%=@shoe.description()%></p>



  <div class="divider"></div><br>
  <% if @shoe.stores().any? %>
    <p>
      This shoe is currently available in these stores:
    </p>
    <% @shoe.stores.each do |store| %>



  <div class="row">
    <div class="col s4">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><%=@shoe.name()%></span>
          <p><%=store.name()%>
             <%=store.city()%>
             <%=store.state()%></p>
        </div>
        <div class="card-action">
          <a href="/stores/<%=store.id()%>">View</a>
        </div>
      </div>
    </div>
  </div>




      <% end %>
    <% else %>
      <p>This shoe is not currently available in any store</p>
    <% end %>
